<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_viewPay"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    card_view:contentPadding="8dp"
    card_view:cardElevation="8dp"
    android:layout_height="310dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">
        <TextView
            android:fontFamily="@font/robotoblack"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Your Loans"/>
        <TextView
            android:fontFamily="@font/robotoblack"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payloanType"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="No Loans"/>

        <TextView
            android:fontFamily="@font/robotolight"
            android:text="Loan Amount"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotoblack"
            android:text="Loan Amount: "
            android:id="@+id/payloanAmount"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotolight"
            android:textColor="@color/black"
            android:text="AMOUNT PAID: "
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotoblack"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="AMOUNT PAID: "
            android:id="@+id/payamountPaid"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotolight"
            android:textColor="@color/black"
            android:text="AMOUNT REMAINING: "
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotoblack"
            android:textColor="@color/black"
            android:text="AMOUNT REMAINING: "
            android:id="@+id/payamountRemaining"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotolight"
            android:text="TOTAL DUE: "
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:fontFamily="@font/robotoblack"
            android:text="TOTAL DUE: "
            android:id="@+id/paytotalDue"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <Button android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg_round"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Pay"
                android:lines="1"
                android:id="@+id/payEMI"/>
            <Button android:layout_height="40dp"
                android:layout_width="135dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg_round"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Pay All"
                android:lines="1"
                android:id="@+id/idPayall"/>

        </TableRow>
    </LinearLayout>
</androidx.cardview.widget.CardView>

