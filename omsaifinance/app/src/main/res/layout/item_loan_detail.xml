<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/static_tv_tenure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotolight"
            android:text="Date  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tenure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/static_tv_tenure"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/robotoregular"
            android:layout_toEndOf="@+id/static_tv_tenure"
            android:layout_toRightOf="@+id/static_tv_tenure"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/static_tv_emi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/static_tv_tenure"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Mode  "
            android:textColor="@color/black"
            android:fontFamily="@font/robotolight"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_emi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/static_tv_emi"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/static_tv_emi"
            android:layout_toRightOf="@+id/static_tv_emi"
            android:fontFamily="@font/robotoregular"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/static_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/static_tv_emi"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="EMI Amount"
            android:fontFamily="@font/robotolight"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/static_tv_total"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/static_tv_total"
            android:layout_toRightOf="@+id/static_tv_total"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/static_tv_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/static_tv_total"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Due Amount"
            android:fontFamily="@font/robotolight"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_due"
            android:layout_width="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/static_tv_due"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/static_tv_due"
            android:layout_toRightOf="@+id/static_tv_due"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/static_tv_grand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/static_tv_due"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/robotolight"
            android:text="Grand Total"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_grand"
            android:layout_width="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/static_tv_grand"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/static_tv_grand"
            android:layout_toRightOf="@+id/static_tv_grand"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>