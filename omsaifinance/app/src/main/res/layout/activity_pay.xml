<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="PayActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:fontFamily="@font/robotoblack"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:background="@color/gray"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="EMI Details"/>

            <TextView
                android:fontFamily="@font/robotoblack"
                android:text="EMI Amount: "
                android:id="@+id/loanAmount"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:id="@+id/pay_emi_amount"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="AMOUNT PAID: "
                android:textSize="20dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:fontFamily="@font/robotoblack"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="DUE Amount: "
                android:id="@+id/amountPaid"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:id="@+id/pay_due_amount"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="AMOUNT REMAINING: "
                android:background="@color/gray"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:fontFamily="@font/robotoblack"
                android:textColor="@color/colorPrimary"
                android:text="GRAND Total: "
                android:id="@+id/amountRemaining"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:id="@+id/pay_grand_amount"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="AMOUNT REMAINING: "
                android:background="@color/gray"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TableRow
                android:layout_height="75dp"
                android:layout_width="match_parent"
                android:gravity="center">
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_bg_round_nobg"
                    android:textColor="#FFF"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="Pay Now"
                    android:lines="1"
                    android:id="@+id/pay_grand_pay"/>
            </TableRow>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>